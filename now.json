{
  "version": 2,
  "name": "courier",
  "builds": [
    { "src": "next.config.js", "use": "@now/next" },
    { "src": "api/**/*.ts", "use": "@now/node" }
  ],
  "routes": [
    { "src": "/graphql", "dest": "api/graphql.ts" },
    { "src": "/api/(.*)", "dest": "/api/$1.ts" }
  ],
  "env": {
    "DATABASE_URL": "@database-url"
  }
}
